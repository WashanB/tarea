Algoritmo impuesto
	Definir annualTax como real;
	Definir time Como Entero;
	Definir amount como entero;
	Definir pay como real;
	Escribir "Bienvenido al sistema";
	Escribir "¿Cuanto es el monto que desea prestar: ";
	Leer amount; 
	time <- (5);
	annualTax <- (0.03);
	pay <- amount*annualTax;	
	Escribir "Su impuesto del primer año es de: ";
	Escribir pay;
	Escribir "Le recordamos siempre estar al dia con los pagos";
	Escribir "Buen dia"
FinAlgoritmo
